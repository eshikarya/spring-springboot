<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="userDatabaseProvider" class="com.ioc.coupling.UserDatabaseProvider"></bean>
    <bean id="userWebServiceProvider" class="com.ioc.coupling.UserWebServiceProvider"></bean>

    <bean id="userManagerWithUserWebServiceProvider" class="com.ioc.coupling.UserManager">
        <constructor-arg ref="userWebServiceProvider"/>
    </bean>

    <bean id="userManagerWithUserDatabaseProvider" class="com.ioc.coupling.UserManager">
        <constructor-arg ref="userDatabaseProvider"/>
    </bean>

</beans>