<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="mySpecification" class="com.example.autowire.constructor.Specification">
        <property name="make" value="Tata"/>
        <property name="model" value="Nano"/>
    </bean>

    <bean id="myCar" class="com.example.autowire.constructor.Car" autowire="constructor"/>

</beans>